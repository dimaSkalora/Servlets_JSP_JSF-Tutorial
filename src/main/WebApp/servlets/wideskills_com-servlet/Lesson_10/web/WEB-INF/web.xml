<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <display-name>Servlets Tutorial</display-name>

    <servlet>
        <servlet-name>SourceServlet</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_10.SourceServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DestinationServlet</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_10.DestinationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RedirectServlet</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_10.RedirectServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RedirectGoogleServlet</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_10.RedirectGoogleServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SourceHomeServlet</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_10.SourceHomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SourceServlet</servlet-name>
        <url-pattern>/sourceServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DestinationServlet</servlet-name>
        <url-pattern>/destinationServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RedirectServlet</servlet-name>
        <url-pattern>/redirectServlet</url-pattern>
    </servlet-mapping>

   <servlet-mapping>
        <servlet-name>RedirectGoogleServlet</servlet-name>
        <url-pattern>/redirectGoogleServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SourceHomeServlet</servlet-name>
        <url-pattern>/sourceHomeServlet</url-pattern>
    </servlet-mapping>

</web-app>


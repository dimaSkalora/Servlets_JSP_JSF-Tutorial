<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <display-name>Servlets Tutorial</display-name>

    <listener>
        <description>Servlet Context Listener Example</description>
        <listener-class>servlets.wideskills_com_servlet.lesson_15.MyServletContextListener</listener-class>
    </listener>

    <listener>
        <description>Servlet Context Attribute Listener Example</description>
        <listener-class>servlets.wideskills_com_servlet.lesson_15.MyServletContextAttributeListener</listener-class>
    </listener>

    <listener>
        <description>Session Listener Example</description>
        <listener-class>servlets.wideskills_com_servlet.lesson_15.MySessionListener</listener-class>
    </listener>

    <listener>
        <description>Session Attribute Listener Example</description>
        <listener-class>servlets.wideskills_com_servlet.lesson_15.MyHttpSessionAttributeListener</listener-class>
    </listener>

    <listener>
        <description> Servlet Request Listener Example</description>
        <listener-class>servlets.wideskills_com_servlet.lesson_15.MyServletRequestListener</listener-class>
    </listener>

    <listener>
        <description> Servlet Request Attribute Listener Example</description>
        <listener-class>servlets.wideskills_com_servlet.lesson_15.MyServletRequestAttributeListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_15.MyServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ServletContextAttributeListenerDemo</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_15.ServletContextAttributeListenerDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HttpSessionListenerDemo</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_15.HttpSessionListenerDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HttpSessionAttributeListenerDemo</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_15.HttpSessionAttributeListenerDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ServletRequestAttributeListenerDemo</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_15.ServletRequestAttributeListenerDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HttpSessionBindingListenerDemo</servlet-name>
        <servlet-class>servlets.wideskills_com_servlet.lesson_15.HttpSessionBindingListenerDemo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/myServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletContextAttributeListenerDemo</servlet-name>
        <url-pattern>/servletContextAttributeListenerDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HttpSessionListenerDemo</servlet-name>
        <url-pattern>/httpSessionListenerDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HttpSessionAttributeListenerDemo</servlet-name>
        <url-pattern>/httpSessionAttributeListenerDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletRequestAttributeListenerDemo</servlet-name>
        <url-pattern>/servletRequestAttributeListenerDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HttpSessionBindingListenerDemo</servlet-name>
        <url-pattern>/httpSessionBindingListenerDemo</url-pattern>
    </servlet-mapping>

</web-app>

